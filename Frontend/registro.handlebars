<div class="formulario">
    <h1>Registro</h1>
    <form action="/register" method="POST">
      <div class="input-box">
        <input type="text" name="nombre" required>
        <label>Nombre Completo</label>
      </div>
      <div class="input-box">
        <input type="text" name="rut" required>
        <label>RUT (Ej: 12.345.678-9)</label>
      </div>
      <div class="input-box">
        <input type="email" name="email" required>
        <label>Correo electrónico</label>
      </div>
      <div class="input-box">
        <input type="text" name="usuario" required>
        <label>Nombre de usuario</label>
      </div>
      <div class="input-box">
        <input type="password" name="password" required>
        <label>Contraseña</label>
      </div>
      <div class="input-box">
        <input type="password" name="repassword" required>
        <label>Confirmar Contraseña</label>
      </div>
      
      <div style="margin-top: 1rem; margin-bottom: 2rem;">
        <label for="birthdate"><strong>Fecha de Nacimiento</strong></label>
        <input type="date" name="birthdate" id="birthdate" class="input-date-style" required>
      </div>

      <input type="submit" value="Registrarse">

      <div class="volver">
        <a href="/Inicio" class="btn-outline">Volver al inicio</a>
      </div>
    </form>

    {{#if error}}
      <p class="alert alert-danger">{{error}}</p>
    {{/if}}
    {{#if success}}
      <p class="alert alert-success">{{success}}</p>
    {{/if}}
</div>