<div class="contenedor-pagina-centrado">
  <div class="formulario">
    <h1>Realizar Depósito</h1>
    
    <p style="text-align: center; margin-bottom: 1.5rem;">
      Saldo actual: <strong id="saldo-actual">$0</strong>
    </p>
    
    <form id="form-deposito" onsubmit="procesarDeposito(event)">
      <div class="input-box">
        <input type="number" name="monto" id="monto" min="1" max="10000" step="1" required>
        <label>Monto a depositar</label>
      </div>
      
      <p style="font-size: 0.9rem; color: var(--color-text-secondary); margin-bottom: 1rem;">
        Monto mínimo: $1<br>
        Monto máximo: $10,000
      </p>
      
      <input type="submit" value="Confirmar Depósito">
      
      <div class="volver">
        <a href="/Perfil" class="btn-outline">Volver al perfil</a>
      </div>
    </form>
  </div>
</div>

