<header class="fixed-nav-header">
    <nav class="navbar-inicio">
        <h1 class="logo-text">PrimeBet</h1>
        <div class="nav-links-inicio">
            <a href="/Retiro" class="nav-link-item">Realizar retiro</a>
            <a href="/Deposito" class="nav-link-item">Realizar depósito</a>
            <a href="/Perfil" class="nav-link-item">Ir al perfil</a>
            <a href="/logout" class="nav-link-item" style="color: var(--color-danger);">Cerrar Sesión</a>
        </div>
    </nav>
</header>

<div class="contenedor-ruleta-page">
  <h1 style="color:var(--color-secondary);">Juego de la ruleta</h1>

  <div class="game-layout">
    
    <div class="ruleta-columna">
      <img src="/Ruleta.webp" alt="Ruleta Europea" class="ruleta-small">
      <div class="betting-controls-bottom">
        <button class="btn-spin">INICIAR APUESTA</button>
      </div>
    </div>

    <div class="tabla-columna">
      <img src="/Tabla_Ruleta.webp" alt="Tapete de Ruleta" class="tabla-ruleta-img">
    </div>

    <div class="panel-derecho-columna">
      <div class="panel-derecho">
        <p class="saldo">Dinero disponible: ${{saldo}}</p>
        <p class="estado">Estado: {{#if estado}}{{estado}}{{else}}Esperando apuesta{{/if}}</p>
        
        <div class="tablas-apuestas">
          <div class="ultimas-apuestas">
            <h3 style="color:var(--color-primary);">Últimas apuestas</h3>

            {{#if apuestas}}
            <table class="tabla-apuestas">
              <thead>
                <tr><th>#</th><th>Apuesta</th></tr>
              </thead>
              <tbody>
                {{#each apuestas}}
                  <tr>
                    <td>{{@index}}</td>
                    <td class="{{this.color}}">{{this.detalle}}</td>
                  </tr>
                {{/each}}
              </tbody>
            </table>
            {{else}}
              <p style="color:var(--color-text-muted);">No hay apuestas recientes.</p>
            {{/if}}
          </div>

          <div class="ultimos-resultados">
            <h3 style="color:var(--color-primary);">Últimos resultados</h3>

            {{#if resultados}}
            <table class="tabla-resultados">
              <thead>
                <tr><th>#</th><th>Resultado</th></tr>
              </thead>
              <tbody>
                {{#each resultados}}
                  <tr>
                    <td>{{@index}}</td>
                    <td class="{{this.color}}">{{this.detalle}}</td>
                  </tr>
                {{/each}}
              </tbody>
            </table>
            {{else}}
              <p style="color:var(--color-text-muted);">No hay resultados aún.</p>
            {{/if}}
          </div>
        </div>
      </div>
    </div>

  </div>
</div>