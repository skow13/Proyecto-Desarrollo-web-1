<div class="perfil">
  <h1>Perfil de usuario</h1>

  <section>
    <ul>
      <li><strong>Nombre:</strong> {{nombre}}</li>
      <li><strong>Fecha de nacimiento:</strong> {{fechaNacimiento}}</li>
      <li><strong>Nombre de usuario:</strong> {{usuario}}</li>
      <li><strong>Correo electrónico:</strong> {{email}}</li>
      <li><strong>Saldo actual:</strong> ${{saldo}}</li>
    </ul>
  </section>

  <h2>Últimas 5 transacciones:</h2>

  {{#if transacciones}}
    <table class="tabla-transacciones">
      <thead>
        <tr>
          <th>Fecha</th>
          <th>Detalle</th>
          <th class="monto">Importe</th>
        </tr>
      </thead>
      <tbody>
        {{#each transacciones}}
          <tr>
            <td>{{this.fecha}}</td>
            <td>{{this.detalle}}</td>
            {{#if this.positivo}}
              <td class="monto positivo">+ ${{this.monto}}</td>
            {{else}}
              <td class="monto negativo">− ${{this.monto}}</td>
            {{/if}}
          </tr>
        {{/each}}
      </tbody>
    </table>
  {{else}}
    <p>No hay transacciones registradas aún.</p>
  {{/if}}

  <div class="botones">
    <a href="/Ruleta">Ir a la Ruleta</a>
  </div>
</div>

