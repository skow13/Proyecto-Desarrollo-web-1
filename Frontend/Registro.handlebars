<div class="contenedor-pagina-centrado">
  <div class="formulario">
      <h1>Registro</h1>
      <form id="form-registro" onsubmit="registrarUsuario(event)">
        <div class="input-box">
          <input type="text" name="nombre" id="nombre" required>
          <label>Nombre Completo</label>
        </div>
        <div class="input-box">
          <input type="text" name="usuario" id="usuario">
          <label>Nombre de usuario (opcional)</label>
        </div>
        <div class="input-box">
          <input type="email" name="email" id="email" required>
          <label>Correo electrónico</label>
        </div>
        <div style="margin-top: 1rem; margin-bottom: 2rem;">
          <label for="birthdate"><strong>Fecha de Nacimiento (opcional)</strong></label>
          <input type="date" name="birthdate" id="birthdate" class="input-date-style">
        </div>
        <div class="input-box">
          <input type="password" name="password" id="password" required minlength="6">
          <label>Contraseña (mínimo 6 caracteres)</label>
        </div>
        <div class="input-box">
          <input type="password" name="repassword" id="repassword" required>
          <label>Confirmar Contraseña</label>
        </div>
        <input type="submit" value="Registrarse">
        <div class="volver">
          <a href="/Inicio" class="btn-outline">Volver al inicio</a>
        </div>
      </form>
  </div>
</div>

<script>
// Redirigir si ya está autenticado
if (estaAutenticado()) {
  window.location.href = '/Ruleta';
}
</script>